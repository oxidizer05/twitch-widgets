{
    "name": "twitch-widgets",
    "version": "1.0.6",
    "description": "Provides Twitch chat commands and web-widgets for broadcasters",
    "main": "dist/backend/index.js",
    "scripts": {
        "start": "node --unhandled-rejections=strict dist/backend/index.js",
        "start-pkg": "cd pkg-release && cmd /k twitch-widgets-win",
        "build": "npm run build-end && npm run build-front",
        "build-dev": "gulp build-dev && rimraf dist/backend && tsc -p tsconfig.dev.json",
        "build-front": "gulp build",
        "build-end": "rimraf dist/backend && tsc",
        "build-pkg": "rimraf pkg-release && pkg package.json --out-path pkg-release && copy /y config.json pkg-release",
        "make": "npm run build && npm run build-pkg",
        "watch-front": "gulp watch",
        "watch-front-nosync": "gulp watch-nosync",
        "watch-end": "nodemon",
        "test": "jest --detectOpenHandles",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src --ignore-pattern src/**/*.spec.ts"
    },
    "bin": "dist/backend/index.js",
    "pkg": {
        "assets": "dist/frontend/**/*"
    },
    "gulp": {
        "src": {
            "root": "./src/frontend",
            "css": "./src/frontend/scss",
            "js": "./src/frontend/js",
            "img": "./src/frontend/img",
            "font": "./src/frontend/font",
            "html": "./src/frontend"
        },
        "build": {
            "root": "./dist/frontend",
            "css": "./dist/frontend/css",
            "js": "./dist/frontend/js",
            "img": "./dist/frontend/img",
            "font": "./dist/frontend/font",
            "html": "./dist/frontend"
        },
        "js": {
            "merge": false,
            "mergeName": "scripts",
            "sourcemaps": true,
            "uglify": {
                "enable": true,
                "opts": {}
            }
        },
        "css": {
            "merge": false,
            "mergeName": "style",
            "sourcemaps": true,
            "sass": {
                "enable": true,
                "opts": {}
            },
            "clean": {
                "enable": true,
                "opts": {}
            },
            "uncss": {
                "enable": true,
                "opts": {
                    "ignore": [
                        ".draggable-mirror"
                    ]
                }
            },
            "cssvariables": {
                "enable": true,
                "opts": {
                    "preserve": true
                }
            },
            "autoprefixer": {
                "enable": true,
                "opts": {}
            },
            "calc": {
                "enable": true,
                "opts": {}
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/raziEiL/twitch-widgets.git"
    },
    "author": {
        "name": "Denis Medvedev (raziEiL)",
        "email": "mr.raz4291@gmail.com"
    },
    "jest": {
        "roots": [
            "<rootDir>"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js?$",
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testEnvironment": "jsdom"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            "node_modules"
        ],
        "watch": [
            "src/backend"
        ],
        "exec": "tsc && npm run start",
        "ext": "ts"
    },
    "license": "GPL-3.0",
    "devDependencies": {
        "@raz1el/uncss": "^0.17.6",
        "@types/express": "^4.17.9",
        "@types/node": "^15.3.0",
        "@types/tmi.js": "^1.4.2",
        "@types/ws": "^7.4.4",
        "@typescript-eslint/eslint-plugin": "^4.24.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.24.0",
        "@typescript-eslint/parser": "^4.24.0",
        "autoprefixer": "^9.8.6",
        "browser-sync": "^2.26.7",
        "browserify": "^17.0.0",
        "del": "^6.0.0",
        "eslint": "^7.15.0",
        "eslint-plugin-import": "^2.23.2",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-typescript": "^0.14.0",
        "eslint-plugin-unicorn": "^29.0.0",
        "glob-promise": "^4.1.0",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.2.0",
        "gulp-concat": "^2.6.1",
        "gulp-htmlmin": "^5.0.1",
        "gulp-imagemin": "^7.1.0",
        "gulp-postcss": "^9.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-uglify-es": "^2.0.0",
        "jest": "^26.6.3",
        "merge-stream": "^2.0.0",
        "node-sass": "^5.0.0",
        "pkg": "^4.4.9",
        "postcss": "^8.2.8",
        "postcss-calc": "^7.0.5",
        "postcss-css-variables": "^0.17.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "tslint": "^6.1.3",
        "typescript": "^4.1.3",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "dependencies": {
        "@raz1el/ngrok": "^3.3.1",
        "@raz1el/util": "^1.0.6",
        "@shopify/draggable": "^1.0.0-beta.12",
        "express": "^4.17.1",
        "js-cookie": "^2.2.1",
        "tmi.js": "^1.5.0",
        "ws": "^7.4.5"
    }
}