{
    "name": "twitch-widgets",
    "version": "1.0.2",
    "description": "Provides Twitch chat commands and web-widgets for broadcasters",
    "main": "dist/backend/index.js",
    "scripts": {
        "start": "node --unhandled-rejections=strict dist/backend/index.js",
        "start-pkg": "cd pkg-release && cmd /k twitch-widgets-win",
        "build": "npm run build-full && npm run build-pkg",
        "build-full": "npm run build-front && npm run build-end",
        "build-dev": "gulp build-dev && rm -rf dist/backend && tsc --sourceMap true -p tsconfig.dev.json",
        "build-front": "gulp build",
        "build-end": "rm -rf dist/backend && tsc",
        "build-pkg": "rm -rf pkg-release && pkg package.json --out-path pkg-release && copy /y config.json pkg-release",
        "watch-front": "gulp watch",
        "watch-end": "nodemon",
        "test": "jest --detectOpenHandles",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src --ignore-pattern src/**/*.spec.ts"
    },
    "bin": "dist/backend/index.js",
    "pkg": {
        "assets": "dist/frontend/**/*"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/raziEiL/twitch-widgets.git"
    },
    "author": {
        "name": "Denis Medvedev (raziEiL)",
        "email": "mr.raz4291@gmail.com"
    },
    "jest": {
        "roots": [
            "<rootDir>"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js?$",
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testEnvironment": "jsdom"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            "node_modules"
        ],
        "watch": [
            "src/backend"
        ],
        "exec": "tsc && npm run start",
        "ext": "ts"
    },
    "license": "GPL-3.0",
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/tmi.js": "^1.4.2",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/eslint-plugin-tslint": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "autoprefixer": "^9.8.6",
        "browser-sync": "^2.26.7",
        "browserify": "^17.0.0",
        "del": "^6.0.0",
        "eslint": "^7.15.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-typescript": "^0.14.0",
        "eslint-plugin-unicorn": "^23.0.0",
        "file-saver": "^2.0.5",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.2.0",
        "gulp-concat": "^2.6.1",
        "gulp-htmlmin": "^5.0.1",
        "gulp-imagemin": "^7.1.0",
        "gulp-postcss": "^9.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-uglify-es": "^2.0.0",
        "gulp-uncss": "^1.0.6",
        "jest": "^26.6.3",
        "merge-stream": "^2.0.0",
        "node-sass": "^4.14.1",
        "postcss-calc": "^7.0.1",
        "postcss-css-variables": "^0.17.0",
        "ts-jest": "^26.4.4",
        "tslint": "^6.1.3",
        "typescript": "^4.1.3",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0"
    },
    "dependencies": {
        "@raz1el/ngrok": "^3.3.1",
        "@raz1el/util": "^1.0.6",
        "express": "^4.17.1",
        "js-cookie": "^2.2.1",
        "tmi.js": "^1.5.0"
    }
}